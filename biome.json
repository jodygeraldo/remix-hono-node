{
	"$schema": "node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error"
			},
			"style": {
				"noParameterAssign": "off",
				"useConst": "off"
			}
		}
	},
	"files": {
		"ignore": ["build"],
		"ignoreUnknown": true
	}
}
